{
  "manifest_version": 2,
  "name": "Discord Repost Buttons",
  "description": "Adds buttons to select websites that allow sharing media in configured Discord servers",
  "version": "0.0.1",
  "icons": {
    "64": "icons/icon.png"
  },
  "permissions": [
    "storage",
    "https://*/"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false,
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.reddit.com/*"
      ],
      "js": [
        "reddit.js"
      ]
    }
  ]
}